# vim => neovim
alias vim="nvim"
alias vimdiff="nvim -d"

# ls
alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -alh'
alias l='ls -l'

# cd ..
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# clear
alias c="clear"

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Weather
alias weather="curl wttr.in/oslo"

